{
  "name": "@home/db",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "migrate:create": "node-pg-migrate create --migration-file-language ts -m migrations",
    "migrate:up": "../../scripts/with-env.sh npx node-pg-migrate up -m migrations",
    "migrate:up:prod": "node-pg-migrate up -m migrations",
    "migrate:down": "../../scripts/with-env.sh npx node-pg-migrate down -m migrations",
    "db:reset": "../../scripts/with-env.sh npx tsx scripts/reset-db.ts && pnpm migrate:up",
    "db:introspect": "../../scripts/with-env.sh npx drizzle-kit introspect && ./scripts/post-introspect.sh",
    "db:generate": "../../scripts/with-env.sh npx drizzle-kit generate"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "node-pg-migrate": "^7.9.0",
    "pg": "^8.13.0",
    "tsx": "^4.19.1"
  },
  "devDependencies": {
    "@home/tsconfig": "workspace:*",
    "@types/pg": "^8.11.0",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.6.2"
  }
}
