{
  "name": "home-core",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": "22.18.0"
  },
  "scripts": {
    "dev": "COMMIT_SHA=$(git rev-parse --short HEAD || echo dev) VITE_COMMIT_SHA=$(git rev-parse --short HEAD || echo dev) turbo run dev --parallel",
    "dev:web": "COMMIT_SHA=$(git rev-parse --short HEAD || echo dev) VITE_COMMIT_SHA=$(git rev-parse --short HEAD || echo dev) pnpm --filter @home/web dev",
    "dev:api": "COMMIT_SHA=$(git rev-parse --short HEAD || echo dev) pnpm --filter @home/api dev",
    "dev:doc-processor": "pnpm --filter @home/doc-processor dev",
    "setup:doc-processor": "cd apps/doc-processor && ./setup.sh",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "e2e:install": "playwright install --with-deps",
    "format": "prettier --write .",
    "changeset": "changeset",
    "release": "changeset publish",
    "start:web": "pnpm --filter @home/web build && pnpm --filter @home/web preview",
    "start:api": "pnpm --filter @home/api build && pnpm --filter @home/api start"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@eslint/js": "^9.14.0",
    "@changesets/cli": "^2.27.8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "turbo": "^2.1.1",
    "typescript-eslint": "^8.8.1",
    "typescript": "^5.6.2"
  }
}
