{
  "name": "home-core",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": "22.18.0"
  },
  "scripts": {
    "bootstrap": "./scripts/bootstrap.sh",
    "worktree:add": "./scripts/worktree-add.sh",
    "dev": "./scripts/dev.sh",
    "dev:web": "COMMIT_SHA=$(git rev-parse --short HEAD || echo dev) VITE_COMMIT_SHA=$(git rev-parse --short HEAD || echo dev) pnpm --filter @home/web dev",
    "dev:api": "COMMIT_SHA=$(git rev-parse --short HEAD || echo dev) pnpm --filter @home/api dev",
    "dev:doc-processor": "pnpm --filter @home/doc-processor dev",
    "setup:doc-processor": "cd apps/doc-processor && ./setup.sh",
    "process-docs": "./scripts/with-env.sh pnpm exec tsx apps/api/src/scripts/process-documents.ts",
    "test-resize": "./scripts/with-env.sh pnpm exec tsx apps/api/src/scripts/test-image-resize.ts",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "check": "pnpm build && pnpm typecheck && pnpm lint && pnpm test",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "e2e:install": "playwright install --with-deps",
    "format": "prettier --write .",
    "changeset": "changeset",
    "release": "changeset publish",
    "start:web": "pnpm --filter @home/web build && pnpm --filter @home/web preview",
    "start:api": "pnpm --filter @home/api build && pnpm --filter @home/api start",
    "prepare": "husky || true"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@eslint/js": "^9.14.0",
    "@playwright/test": "^1.49.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "turbo": "^2.1.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.1"
  }
}
