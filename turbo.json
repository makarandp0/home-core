{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": [
    "COMMIT_SHA",
    "VITE_COMMIT_SHA",
    "VITE_GIT_BRANCH",
    "DATABASE_URL",
    "DOCUMENT_STORAGE_PATH",
    "HOME_API_PORT",
    "HOME_WEB_PORT",
    "HOME_DOC_PROCESSOR_PORT",
    "HOME_DOC_PROCESSOR_URL",
    "AUTH_ENABLED",
    "FIREBASE_SERVICE_ACCOUNT_BASE64",
    "FIREBASE_CLIENT_API_KEY",
    "FIREBASE_CLIENT_APP_ID"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".vite/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"]
    }
  }
}
