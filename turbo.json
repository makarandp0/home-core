{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": [
    "COMMIT_SHA",
    "PORT",
    "VITE_PORT",
    "VITE_API_PORT",
    "VITE_COMMIT_SHA",
    "DOC_PROCESSOR_PORT",
    "DOC_PROCESSOR_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".vite/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"]
    }
  }
}
